{
  "name": "youRoomHelper",

  "version": "1.0.0.0",

  "description": "youRoom helper for more comfortable use",

  "background": {
    "persistent": false,
    "scripts": [
      "lib/underscore.min.js",
      "lib/underscore.deferred.min.js",
      "fancy-settings/source/lib/store.js",
      "Extension.js",
      "background.js"
    ]
  },

  "content_scripts": [ {
    "all_frames": true,
    "matches": ["*://www.youroom.in/*"],
    "js": [
      "lib/jquery.js",
      "content.js"
    ],
    "run_at": "document_start"
  } ],

  "content_security_policy": "script-src 'self'; object-src 'none'; img-src 'self'",

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "manifest_version": 2,

  "options_page": "fancy-settings/source/index.html",

  "page_action": {
    "default_icon": "images/icon-19.png",
    "default_title": "youRoomHelper is working"
  },

  "permissions": [
    "*://www.youroom.in/*",
    "tabs",
    "notifications"
  ],

  "update_url": "https://github.com/yamayamayamaji/youRoomHelper/blob/master/updates.xml",

  "web_accessible_resources": ["images/meeting.png", "meeting.css"]
}
